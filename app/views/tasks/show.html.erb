<h1><%= @task.title %></h1>
<hr>
<p><strong><%= @task.details %></strong></p>
<%= form_for(@task) do |f| %>
  <%= f.check_box :completed, disabled: "disabled" %>
  <%= @task.completed ? "This task was completed!" : "Task not yet completed..." %>
  <br>
<% end %>
<br>

<%= link_to "Edit task", edit_task_path(@task) %>
<br>
<%= link_to "Back to list", tasks_path %>